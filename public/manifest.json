{
  "name": "Conventional comments",
  "description": "Conventional comments for any page",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "32": "/icons/icon@0.25x.png",
    "64": "/icons/icon@0.5x.png",
    "128": "/icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "/icons/icon@0.25x.png",
      "64": "/icons/icon@0.5x.png",
      "128": "/icons/icon.png"
    }
  },
  "permissions": ["scripting", "webNavigation", "storage"],
  "host_permissions": ["*://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["fonts/*"],
      "matches": ["*://*/*"]
    }
  ]
}
